<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        Tree View-->
        <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ref" string="Patient Reference"/>
                    <field name="name" string="Patient Name"/>
                    <field name="age"/>
                    <field name="gender"/>
                </tree>
            </field>
        </record>

        <!--        Form View-->
        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="ref"/>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="gender"/>
                            </group>
                            <group>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        Search View-->
        <record id="view_hospital_patient_search" model="ir.ui.view">
            <field name="name">hospital.patient.search</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('ref', 'ilike', self)]"/>
                    <field name="ref"/>
                    <field name="age"/>
                    <filter name="filter_male" string="Male Patient" domain="[('gender', '=', 'male')]"/>
                    <filter name="filter_female" string="Female Patient" domain="[('gender', '=', 'female')]"/>
                    <separator/>
                    <filter name="filter_kids" string="Kids Patient" domain="[('age', '&lt;=', 15)]"/>
                    <filter name="filter_archived" string="Archived" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Gender" name="group_by_gender" context="{'group_by':'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!--        action-->
        <record id="action_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.patient</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_filter_male': 1, 'search_default_group_by_gender': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Patient Form
                </p>
            </field>
        </record>

        <menuitem
                id="menu_patient"
                action="action_hospital_patient"
                name="Patient"
                sequence="0"
                parent="menu_patient_master"/>

    </data>
</odoo>
