<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--        Tree View-->
        <record id="view_hospital_appointment_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree create="true" delete="false">
                    <field name="priority" widget="priority"/>
                    <field name="patient_id"/>
                    <field name="gender"/>
                    <field name="appointment_time"/>
                </tree>
            </field>
        </record>

        <!--        Form View-->
        <record id="view_hospital_appointment_form" model="ir.ui.view">
            <field name="name">hospital.appointment.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form create="1" delete="0" edit="false">
                    <header>

                        <field name="state" widget="statusbar" statusbar_visible="draft,in_consultation,done" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="priority" widget="priority" class="mr-3"/>
                                </h1>
                            </div>
                        </group>

                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="ref"/>
                                <field name="gender"/>
                                <field name="booking_date"/>
                            </group>
                            <group>
                                <field name="appointment_time"/>
                                <button name="object_test" help="Clicking this will allow you to print a message in the log"
                                        string="Object Button" type="object" class="btn-primary"
                                        confirm="Are you sure to proceed with this action??"/>
                                <button name="%(hospital_management_v15.action_hospital_patient)d"
                                        help="on clicking this you will be redirected to the patients records"
                                        string="Action Button" type="action" class="btn-primary" confirm="Are you sure you want to proceed?"
                                />
                            </group>
                        </group>
                        <notebook>
                            <page string="Prescription" name="prescription">

                                <field name="prescription" placeholder="Enter Prescription"/>

                            </page>
                            <page string="Pharmacy" name="pharmacy">
                                <group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <!--        Chatter-->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <!--        Search View-->
        <record id="view_hospital_appointment_search" model="ir.ui.view">
            <field name="name">hospital.appointment.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <search>

                </search>
            </field>
        </record>

        <!--        action-->
        <record id="action_hospital_appointment" model="ir.actions.act_window">
            <field name="name">Appointments</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <!--            <field name="context">{'search_default_filter_male': 1, 'search_default_group_by_gender': 1}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Appointment
                </p>
            </field>
        </record>

        <menuitem
                id="menu_appointment"
                action="action_hospital_appointment"
                name="Appointments"
                sequence="10"
                parent="menu_appointment_master"/>

    </data>
</odoo>
